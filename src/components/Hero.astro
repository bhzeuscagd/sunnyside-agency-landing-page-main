---
import Icons from "./UI/Icons.astro";
import Navbar from "./Navbar.astro";
---

<header
    class="w-full min-h-[600px] flex flex-col justify-center items-center relative"
>
    <div class="absolute top-0 w-full z-10">
        <Navbar />
    </div>
    <picture>
        <source
            media="(min-width: 768px)"
            srcset="/assets/desktop/image-header.jpg"
        />
        <img
            src="/assets/mobile/image-header.jpg"
            alt="Header"
            class="absolute inset-0 w-full h-full object-cover -z-10"
            loading="eager"
            fetchpriority="high"
        />
    </picture>
    <div class="flex flex-col items-center text-center gap-6 pb-32">
        <h1
            class="font-fraunces text-4xl md:text-6xl tracking-[4px] text-white uppercase text-center mb-6 font-black"
        >
            We are creatives
        </h1>
        <Icons
            name="icon-icon-arrow-down"
            class="w-10 h-auto text-white animate-bounce"
        />
    </div>
</header>
